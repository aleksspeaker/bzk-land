mixin chart(data, id, sid, chartData, comment, source)
  .chart.col-3
    .chartdata
      div
        .digit
          .number #{chartData}
        canvas(id=id width='300', height='300')
    .comment #{comment}

        script.
          var ctx = document.getElementById(#{sid}).getContext('2d');
          var chart = new Chart(ctx, {
              // The type of chart we want to create
              type: 'doughnut',
              // The data for our dataset
              data: {
                  labels: [],
                  datasets: [{
                      backgroundColor: ['rgb(93,144,226)','rgba(255, 255, 255,0)'],
                      borderColor: 'rgb(93,144,226)',
                      data: #{data},
                  }]
              },
              // Configuration options go here
              options: {
              cutoutPercentage: 85,  // Line width
              rotation: 1.56,
              }
          });
